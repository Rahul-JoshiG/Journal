<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- Pressed state color -->
            <solid android:color="#3700B3" /> <!-- Darker purple when pressed -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape>
            <!-- Default state color -->
            <solid android:color="#6200EE" /> <!-- Default purple background -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
