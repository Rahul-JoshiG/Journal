<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape>
            <corners android:radius="10dp" /> <!-- Rounded corners for the shadow -->
            <solid android:color="#80000000" /> <!-- Semi-transparent black for the shadow -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" /> <!-- Padding to create the shadow effect -->
        </shape>
    </item>

    <!-- Border Layer -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <stroke
                android:width="2dp"
                android:color="#757575" /> <!-- Gray border -->
            <corners android:radius="10dp" /> <!-- Rounded corners for the ImageView -->
        </shape>
    </item>
</layer-list>
